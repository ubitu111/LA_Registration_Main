<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewVolunteer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvOptionsVolunteerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="8dp"
            android:text="@string/three_dots_menu"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="position" />

        <TextView
            android:id="@+id/textViewLabelFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/fullName"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewPosition" />

        <TextView
            android:id="@+id/textViewFullName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintStart_toEndOf="@+id/textViewLabelFullName"
            app:layout_constraintTop_toBottomOf="@id/textViewPosition"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="TextView" />

        <TextView
            android:id="@+id/textViewLabelCallSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/call_sign"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewFullName" />

        <TextView
            android:id="@+id/textViewCallSign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintStart_toEndOf="@+id/textViewLabelCallSign"
            app:layout_constraintTop_toBottomOf="@id/textViewFullName"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="TextView" />

        <TextView
            android:id="@+id/textViewLabelNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/forum_nickname"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewCallSign" />

        <TextView
            android:id="@+id/textViewNickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintStart_toEndOf="@+id/textViewLabelNickname"
            app:layout_constraintTop_toBottomOf="@+id/textViewCallSign"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="TextView" />

        <TextView
            android:id="@+id/textViewLabelRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/region"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewNickname"/>

        <TextView
            android:id="@+id/textViewRegion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            tools:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/textViewLabelRegion"
            app:layout_constraintTop_toBottomOf="@+id/textViewNickname"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textViewLabelPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/phone_number"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewRegion" />

        <TextView
            android:id="@+id/textViewPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@color/blue"
            app:layout_constraintStart_toEndOf="@+id/textViewLabelPhoneNumber"
            app:layout_constraintTop_toBottomOf="@+id/textViewRegion"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="TextView" />

        <TextView
            android:id="@+id/textViewLabelCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/info_about_car"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewPhoneNumber"/>

        <TextView
            android:id="@+id/textViewCar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            tools:text="Владимир Олегович Владимир Олегович Владимир Олегович Владимир Олегович Владимир Олегович Владимир Олегович"
            app:layout_constraintStart_toEndOf="@+id/textViewLabelCar"
            app:layout_constraintTop_toBottomOf="@+id/textViewPhoneNumber"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/tvVolunteerStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@color/green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewCar"
            tools:text="активный" />

        <TextView
            android:id="@+id/tvVolunteerTimeForSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="08-30 01/06/2020"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewCar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>